<p id="notice"></p>

<h1>Pessoas</h1>

<%= link_to 'Cadastrar Pessoa', new_pessoa_path,
    {
      :style=>'color:#FFFFFF;',
      :class => "btn btn-primary pull-right"
    }
%>
<br></br>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Sobrenome</th>
      <th>Nascimento</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Avatar</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.sobrenome %></td>
        <td><%= pessoa.data_nascimento %></td>
        <td><%= pessoa.cpf %></td>
        <td><%= pessoa.email %></td>
        <td><%= pessoa.telefone %></td>
        <td><%= pessoa.celular %></td>
        <td><%= image_tag pessoa.avatar.url(:thumb) %></td>
        <td><%= link_to 'Exibir', pessoa, :style=>'color:#FFFFFF;', :class => "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa), :style=>'color:#FFFFFF;', :class => "btn btn-success" %></td>
        <td><%= link_to 'Excluir', pessoa, method: :delete, data: { confirm: 'Você tem certeza?' }, :style=>'color:#FFFFFF;', :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
